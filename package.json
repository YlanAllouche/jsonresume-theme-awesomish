{
  "name": "jsonresume-theme-awesomish",
  "version": "0.2.0",
  "description": "An awesome inspired jsonresume theme and cover letter generator",
  "author": "Ylan Allouche",
  "license": "MIT",
  "private": false,
  "keywords": [
    "jsonresume",
    "jsonresume-theme"
  ],
  "main": "index.js",
  "scripts": {
    "serve": "./node_modules/.bin/resume serve --theme . --resume ./test/sample.json",
    "export:html": "./node_modules/.bin/resume export --theme . --resume ./test/sample.json resume-cli-output.html",
    "export:pdf": "./node_modules/.bin/resume export --theme . --resume ./test/sample.json resume-cli-output.pdf",
    "build:pdf": "node build.js --pdf",
    "build:html": "node build.js",
    "build": "node build.js --pdf",
    "cover-letter": "node build-cover-letter.js",
    "cover-letter:pdf": "node build-cover-letter.js --pdf cover-letter.pdf",
    "test": "node test/test.js",
    "cover-letter:test": "node build-cover-letter.js test/sample-cover-letter.json --pdf letter.pdf"
  },
  "bin": {
    "build-cover-letter": "./build-cover-letter.js"
  },
  "dependencies": {
    "handlebars": "^4.7.8",
    "html-minifier": "^4.0.0",
    "marked": "^11.1.1"
  },
  "devDependencies": {
    "resume-cli": "^3.0.8",
    "puppeteer": "^21.0.0"
  }
}
